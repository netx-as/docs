{
  "build": {
    "content": [
      {
        "files": [
          "**/*.md",
          "*.md",
          "*.yml"
        ],
 		"exclude": [
          "obj/**",
          "_exported_templates/**",
		  "_site/**"
		]
      }
    ],
    "resource": [
      {
        "files": [
          "**/*.png",
          "**/*.jpg",
          "**/*.svg",
          "**/*.ico",
          "**/*.xml",
          "**/*.txt",
          "docs/monitoring/templates/zabbix-qos"
        ],
        "exclude": [
          "_exported_templates/**",
          "obj/**",
          "_site/**"
        ]
      }
    ],
    "overwrite": [],
    "globalMetadata": {
		"_appTitle": "netx documentation",
		"_appLogoPath": "templates/netx/logo.png",
		"_appFaviconPath": "templates/netx/netx-icon.ico",
		"_appFooter": "<a href=\"https://netx.as\">netx.as</a>",
		"_enableSearch": true,
        "_gitContribute": {
              "repo": "https://github.com/netx-as/docs"
       }
	},
	"fileMetadata": {
		"_disableAffix": {
			"index.md": true
		},
		"_disableBreadcrumb": {
			"index.md": true
		}
	},
    "fileMetadataFiles": [],
    "template": [
      "templates/netx"
    ],
    "dest": "_site",
    "markdownEngineName": "markdig",
    "postProcessors": [],
  }
}
